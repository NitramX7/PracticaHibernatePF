<?xml version="1.0" encoding="utf-8"?>
<!DOCTYPE hibernate-configuration PUBLIC
        "-//Hibernate/Hibernate Configuration DTD 5.4//EN"
        "http://www.hibernate.org/dtd/hibernate-configuration-5.4.dtd">
<hibernate-configuration>
  <session-factory>
    <property name="hibernate.connection.driver_class">com.mysql.cj.jdbc.Driver</property>
    <property name="hibernate.connection.url">jdbc:mysql://localhost:3306/plataforma_reventa?useSSL=false&amp;serverTimezone=UTC</property>
    <property name="hibernate.connection.username">root</property>
    <property name="hibernate.connection.password">root</property>

    <!-- No hace falta fijar el dialecto; Hibernate 7 lo detecta, pero si quieres: -->
    <!-- <property name="hibernate.dialect">org.hibernate.dialect.MySQLDialect</property> -->

    <!-- ESTA ES LA CLAVE -->
    <property name="hibernate.current_session_context_class">thread</property>

    <!-- Opcionales de desarrollo -->
    <property name="hibernate.show_sql">true</property>
    <property name="hibernate.format_sql">true</property>
    <!-- <property name="hibernate.hbm2ddl.auto">update</property> -->

    <!-- tus mapeos aquÃ­ -->
     <mapping class="com.example.Hibernate2025.model.Amigo"/> 
  </session-factory>
</hibernate-configuration>